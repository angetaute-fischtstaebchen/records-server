{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "plugin:prettier/recommended",
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": [
    "prettier",
    "mongodb"
  ],
  "ignorePatterns": [
    "src/seed/"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "import/no-default-export": "error",
    "mongodb/no-replace": 0,
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ]
  }
}